@using Web.Models;
@using System.IO;
@using Web.Models.Enums
@using Dybi.App.Services;
@using Dybi.App.Pages.Warehouses.Components
@using Dybi.App.Pages.Settings.Components

@inject IToastService ToastService;
@inject IWarehouseApiClient WarehouseApiClient;
@inject IJSRuntime JS

@if (ShowDialog)
{
    <div class="modal fade show d-block" id="assignModel" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">@Model.Title</h5>
                    <button type="button" class="close" data-dismiss="modal" @onclick="()=>Hide(false)" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div><label class="form-label">Mã sản phẩm:</label> @Model.Code</div>
                    <div><label class="form-label">Danh mục:</label> @Model.CategoryName</div>4
                    <div><label class="form-label">Giá nhập:</label> @Model.Price.ToString("N0")</div>
                    <div><label class="form-label">Seri / Số lượng:</label> @Seris.Count.ToString("N0") / @Model.Price.ToString("N0")</div>
                    <hr />
                    <div class="alert alert-secondary" role="alert">
                        <EditForm Model="Model" OnValidSubmit="HandleSubmit">
                            <div class="input-group input-group-sm mb-3">
                                <span class="input-group-text">Mã</span>
                                <InputText id="inputCode" class="form-control form-control-sm" @bind-Value="Request.Code" />
                                <button type="submit" class="btn btn-primary btn-sm">Lưu</button>
                            </div>
                            @foreach (var seri in Seris)
                            {
                                <span class="badge bg-info text-dark" style="margin-left:5px">@seri</span>
                            }
                            @if (Seris.Count > 0)
                            {
                                <button type="button" class="badge bg-danger">Xóa</button>
                            }
                        </EditForm>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" @onclick="()=>Hide(false)" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
    <InputProductCodeDelete @ref="InputProductCodeDeleteDialog" CloseEventCallback="RemoveCode"></InputProductCodeDelete>
}

@code {
    protected bool ShowDialog { get; set; }

    private WarehouseProductInputDto Model { set; get; }
    private WarehouseProductInputCodeRequest Request { set; get; }
    private List<string> Seris { set; get; }

    private InputProductCodeDelete InputProductCodeDeleteDialog { set; get; }

    [Parameter]
    public EventCallback<WarehouseProductInputDto> CloseEventCallback { set; get; }

    public async Task Show(Guid inputId, WarehouseProductInputDto dto)
    {
        Model = dto;
        Request = new WarehouseProductInputCodeRequest
            {
                InputId = inputId,
                ProductId = Model.Id,
            };
        Seris = await WarehouseApiClient.GetWarehouseInputProductCodes(inputId, Model.Id);
        ShowDialog = true;
        await JS.InvokeVoidAsync("setFocus", "#inputCode");
        StateHasChanged();
    }

    private async Task Hide(bool callback)
    {
        if (callback)
        {
            Model.SeriCount = Seris.Count;
            await CloseEventCallback.InvokeAsync(Model);
        }
        ShowDialog = false;
        StateHasChanged();
    }

    private async Task RemoveCode()
    {
        Seris = await WarehouseApiClient.GetWarehouseInputProductCodes(Request.InputId, Request.ProductId);
        StateHasChanged();
    }

    protected async Task HandleSubmit()
    {
        var result = await WarehouseApiClient.CreateWarehouseInputProductCode(Request);
        if (string.IsNullOrEmpty(result))
        {
            Seris.Add(Request.Code);
            ToastService.ShowInfo("Xóa mã thành công");
            await Hide(true);
        }
        else ToastService.ShowError(result);
    }
}