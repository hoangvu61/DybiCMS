@page "/ReviewList"
@attribute [Authorize]

@using Microsoft.AspNetCore.Authorization;
@using Web.Admin.Components;
@using Web.Admin.Pages.Content.Components;
@using Web.Admin.Services;
@using Web.Models;
@using Web.Models.SeedWork;
@using Microsoft.Extensions.Configuration

@inject IConfiguration Configuration
@inject IToastService ToastService;
@inject IContentApiClient ContentApiClient;
@inject ICompanyApiClient CompanyApiClient;

<section class="content-header">
    <div class="container-fluid">
        <h1 class="m-0">Đánh giá và Bình luận</h1>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        @if (Reviews == null)
        {
            <LoadingIndicator></LoadingIndicator>
        }
        else
        {
            <div class="card card-outline card-info">
                <div class="card-header">
                    <h3 class="card-title">Danh sách bình luận</h3>
                </div>
                <div class="card-body">
                    <ReviewSearch @ref="ReviewSearchControl" Approved="@ReviewListSearch.Approved" OnSearch="SearchReview"></ReviewSearch>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Nội dung</th>
                                <th>Khách hàng</th>
                                <th style="text-align:center">Ngày / Đánh giá</th>
                                <th>Bình luận</th>
                                <th style="text-align:center">Hình</th>
                                <th style="text-align:center">Mua hàng</th>
                                <th style="text-align:center">Duyệt</th>
                                <th style="text-align:right"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Reviews)
                            {
                                <tr>
                                    <td>
                                        <table>
                                            @foreach (var title in item.ReviewForTitle)
                                            {
                                                <tr>
                                                    @if (Languages != null && Languages.Count > 1)
                                                    {
                                                        <td style="border:0;padding:0">@title.Key: </td>
                                                    }
                                                    <td style="border:0;padding:0">@title.Value</td>
                                                </tr>
                                            }
                                        </table>
                                    </td>
                                    <td>
                                        @item.Name <br />
                                        @item.Phone
                                    </td>
                                    <td style="text-align:center">
                                        @item.Created.ToString(Configuration["DateTimeFormat"]) <br />
                                        @item.Vote <i class="fa fa-star" aria-hidden="true"></i>
                                    </td>
                                    <td>@item.Comment</td>
                                    <td style="text-align:center">
                                        @foreach(var image in item.Images)
                                        {
                                            <img src="@(BackendApiUrl + "/" + image.FullPath)" asp-append-version="true" width="50px" />
                                        }
                                    </td>
                                    <td class="form-switch" style="text-align: center; padding-left: 30px;">
                                        <input type="checkbox" checked="@item.IsBuyer" class="form-check-input" role="switch" @onchange="@((e) => {item.IsBuyer = bool.Parse(e.Value.ToString()); IsBuyerChanged(item.Id);})"></input>
                                    </td>
                                    <td class="form-switch" style="text-align: center; padding-left: 30px;">
                                        <input type="checkbox" checked="@item.Approved" class="form-check-input" role="switch" @onchange="@((e) => {item.Approved= bool.Parse(e.Value.ToString()); ApplyChanged(item.Id);})"></input>
                                    </td>
                                    <td style="text-align:right;width:110px">
                                        <button class="btn btn-success btn-sm" @onclick="()=> ReviewCreateDialog.Show(item.Id, item.Name, item.Comment)">Trả lời</button>
                                        <button class="btn btn-danger btn-sm" @onclick="()=> OnDelete(item.Id)">Xóa</button>
                                    </td>
                                </tr>
                                @if(item.Replies != null && item.Replies.Count > 0)
                                {
                                    @foreach (var reply in item.Replies)
                                    {
                                        <tr>
                                            <td></td>
                                            <td>@reply.Name</td>
                                            <td style="text-align:center">@reply.Created.ToString(Configuration["DateTimeFormat"])</td>
                                            <td colspan="4">@reply.Comment</td>
                                            <td><button class="btn btn-danger btn-sm" @onclick="()=> OnDelete(reply.Id)">Xóa</button></td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="8">
                                    <Pagination MetaData="MetaData" Spread="2" SelectedPage="SelectedPage"></Pagination>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <Confirmation ConfirmationMessage="Bạn có chắc chắn xóa?"
                      ConfirmationTitle="Xóa đánh gía"
                      @ref="DeleteConfirmation"
                      ConfirmationChanged="OnConfirmDelete">
            </Confirmation>
            <ReviewCreate @ref="ReviewCreateDialog" CloseEventCallbak="RefreshList"></ReviewCreate>
        }
    </div>
</section>

@code {
    private const int PageSize = 20;
    protected Confirmation DeleteConfirmation { set; get; }
    protected ReviewCreate ReviewCreateDialog { set; get; }

    private List<ReviewDto> Reviews;
    private Guid DeleteId { set; get; }
    private List<string> Languages { get; set; }

    private ReviewSearch ReviewSearchControl { set; get; }
    private ReviewListSearch ReviewListSearch = new ReviewListSearch();
    public MetaData MetaData { get; set; } = new MetaData();

    private string BackendApiUrl { get; set; }

    [CascadingParameter]
    private Error Error { set; get; }

    protected override async Task OnInitializedAsync()
    {
        BackendApiUrl = Configuration["BackendApiUrl"];
        Languages = await CompanyApiClient.GetLanguageList(Guid.Empty);
        ReviewListSearch.PageSize = PageSize;
        ReviewListSearch.Approved = false;
        await RefreshList(true);
    }

    public async Task RefreshList(bool result)
    {
        if (result)
        {
            try
            {
                var pagingResponse = await ContentApiClient.GetReviews(ReviewListSearch);
                Reviews = pagingResponse.Items;
                MetaData = pagingResponse.MetaData;
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Error.ProcessError(ex);
            }
        }
    }

    public async Task SearchReview(ReviewListSearch reviewListSearch)
    {
        ReviewListSearch = reviewListSearch;
        ReviewListSearch.PageSize = PageSize;
        await RefreshList(true);
    }

    private async Task SelectedPage(int page)
    {
        ReviewListSearch.PageNumber = page;
        await RefreshList(true);
    }

    public async Task OnConfirmDelete(bool deleteConfirmed)
    {
        if (deleteConfirmed)
        {
            var result = await ContentApiClient.DeleteReview(DeleteId);
            await RefreshList(result);
        }
    }
    public void OnDelete(Guid deleteId)
    {
        DeleteId = deleteId;
        DeleteConfirmation.Show();
    }

    public async void ApplyChanged(Guid id)
    {
        var result = await ContentApiClient.UpdatePublish(id);
        if (result) ToastService.ShowInfo("Cập nhật thành công");
        else ToastService.ShowError("Cập nhật không thành công");
    }
    public async void IsBuyerChanged(Guid id)
    {
        var result = await ContentApiClient.UpdateReview(id);
        if (result) ToastService.ShowInfo("Cập nhật khách mua hàng thành công");
        else ToastService.ShowError("Cập nhật không thành công");
    }
    
}