@page "/settings/factories"
@attribute [Authorize]

@using Web.App.Pages.Settings.Components
@using Microsoft.AspNetCore.Authorization;
@using Web.App.Components;
@using Web.App.Services;
@using Web.Models;
@using Web.Models.SeedWork;

@inject IToastService ToastService;

<h1>Quản lý Nơi sản xuất</h1>
<section>
    @if (ListFactories == null)
    {
        <LoadingIndicator></LoadingIndicator>
    }
    else
    {
        <div class="card card-outline card-info">
            <div class="card-header">
                <h3 class="card-title">Danh sách nơi sản xuất</h3>
            </div>
            <div class="card-body">
                <table class="table table-sm table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Địa chỉ</th>
                            <th>Số ĐT</th>
                            <th>Email</th>
                            <th>Sử dụng</th>
                            <th class="text-center" style="width:75px">
                                <button class="btn btn-primary btn-xs" @onclick="()=> OpenCreatePopup()">Thêm</button>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ListFactories)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Address</td>
                                <td>@item.Phone</td>
                                <td>@item.Email</td>
                                <td class="form-switch" style="text-align: center; padding-left: 30px;">
                                    <input type="checkbox" checked="@item.IsActive" class="form-check-input" role="switch" @onchange="@((e) => {item.IsActive = bool.Parse(e.Value.ToString()); CheckboxChanged(item);})"></input>
                                </td>
                                <td>
                                    <button class="btn btn-success btn-xs" @onclick="()=> OpenUpdatePopup(item.Id)">Sửa</button>
                                    <button class="btn btn-danger btn-xs" @onclick="()=> OnDelete(item.Id)">Xóa</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <Confirmation ConfirmationMessage="Bạn có chắc chắn xóa?"
                    ConfirmationTitle="Xóa mã nhún"
                    @ref="DeleteConfirmation"
                    ConfirmationChanged="OnConfirmDelete">
        </Confirmation>

        <FactoryCreate @ref="CreateDialog" CloseEventCallbak="RefreshList"></FactoryCreate>
        <FactoryUpdate @ref="UpdateDialog" CloseEventCallbak="RefreshList"></FactoryUpdate>
    }
</section>

@code {
    [Inject] private IWarehouseApiClient WarehouseApiClient { get; set; }

    protected Confirmation DeleteConfirmation { set; get; }
    protected FactoryCreate CreateDialog { set; get; }
    protected FactoryUpdate UpdateDialog { set; get; }

    private List<WarehouseFactoryDto> ListFactories;
    private Guid DeleteId { set; get; }

    protected override async Task OnInitializedAsync()
    {
        ListFactories = await WarehouseApiClient.GetFactories();
    }

    public void OnDelete(Guid deleteId)
    {
        DeleteId = deleteId;
        DeleteConfirmation.Show();
    }

    public async Task OnConfirmDelete(bool deleteConfirmed)
    {
        if (deleteConfirmed)
        {
            await WarehouseApiClient.DeleteWarehouse(DeleteId);
            ListFactories = await WarehouseApiClient.GetFactories();
        }
    }

    public void OpenCreatePopup()
    {
        CreateDialog.Show();
    }

    public void OpenUpdatePopup(Guid id)
    {
        UpdateDialog.Show(id);
    }

    private async Task CheckboxChanged(WarehouseFactoryDto dto)
    {
        var result = await WarehouseApiClient.UpdateFactory(dto);
        if (result) ToastService.ShowInfo("Cập nhật thành công");
        else ToastService.ShowError("Cập nhật không thành công");
    }

    public async Task RefreshList(bool result)
    {
        if (result)
        {
            ListFactories = await WarehouseApiClient.GetFactories();
        }
    }
}